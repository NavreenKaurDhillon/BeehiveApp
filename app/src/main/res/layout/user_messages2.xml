<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/_4dp"
    android:layout_gravity="end"
    android:gravity="end"
    android:background="@color/white"
    android:layout_marginHorizontal="@dimen/_8dp"
    android:layout_height="wrap_content">

    <com.bhive.beehiveapp.utils.fonts.CustomTvRegular
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="@dimen/_2dp"
        android:layout_marginEnd="45dp"
        android:text="manager name"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_13sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userName">

        <com.bhive.beehiveapp.utils.fonts.CustomTvSemiBold
            android:id="@+id/senderImage"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/black_srtroke"
            android:gravity="center"
            android:text="U"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_18sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_8dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="45dp"
            android:layout_marginVertical="5dp"
            android:paddingVertical="@dimen/_5dp">

            <LinearLayout
                android:id="@+id/messageLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/right_bubble"
                android:orientation="vertical">

                <com.bhive.beehiveapp.utils.fonts.CustomTvRegular
                    android:id="@+id/messageBubble"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/_2dp"
                    android:gravity="end"
                    android:paddingHorizontal="@dimen/_30dp"
                    android:paddingVertical="@dimen/_8dp"
                    android:text="user message"
                    android:textSize="@dimen/_12sp"
                    android:textColor="@color/white" />

                <com.bhive.beehiveapp.utils.fonts.CustomTvRegular
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/messageBubble"
                    android:layout_gravity="end"
                    android:layout_marginHorizontal="@dimen/_10dp"
                    android:gravity="end"
                    android:text="time"
                    android:textSize="@dimen/_11sp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/DarkGray" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</RelativeLayout>