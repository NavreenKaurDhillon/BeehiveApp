        <com.bhive.beehiveapp.utils.fonts.CustomTvSemiBold
            android:id="@+id/senderImage"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:background="@drawable/black_srtroke"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:visibility="visible"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/_18sp"
            android:textColor="@color/colorPrimary"
            android:text="U"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="51dp"
            app:cardCornerRadius="8dp"
            android:layout_marginVertical="5dp"
            android:paddingVertical="@dimen/_5dp">

            <LinearLayout
                android:id="@+id/messageLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/right_bubble"
                android:elevation="@dimen/_3dp"
                android:layout_alignParentEnd="true"
                android:orientation="vertical"
                android:paddingVertical="@dimen/_5dp">

                <com.bhive.beehiveapp.utils.fonts.CustomTvRegular
                    android:id="@+id/messageBubble"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/_2dp"
                    android:gravity="end"
                    android:paddingHorizontal="@dimen/_30dp"
                    android:paddingVertical="@dimen/_3dp"
                    android:text="user message"
                    android:textColor="@color/white" />

                <com.bhive.beehiveapp.utils.fonts.CustomTvRegular
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/messageBubble"
                    android:layout_gravity="end"
                    android:layout_marginEnd="12dp"
                    android:gravity="end"
                    android:text="time"
                    android:textAlignment="textEnd"
                    android:textColor="@color/DarkGray" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>
