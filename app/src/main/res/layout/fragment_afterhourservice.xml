<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:id="@+id/baseLayoutAfter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="@color/DarkOrange"
            >

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            >
            <LinearLayout
                android:id="@+id/baseAfterHourLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:id="@+id/line"
                    android:layout_below="@id/headingLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:background="@color/LightestGray"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp"
                    tools:context=".fragment.AfterHourServiceFragment">



                    <ImageView
                        android:id="@+id/iv"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:src="@drawable/afterhours"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"

                        />


                    <com.bhive.beehiveapp.utils.fonts.CustomTvSemiBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_35dp"
                        android:text="24/7 Contact Details"
                        android:textColor="@color/black"
                        android:textSize="@dimen/headingSize" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_45sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/callLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_5dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/callIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_baseline_local_phone_24"
                                app:tint="@color/colorPrimary" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_20dp"
                                android:orientation="vertical">

                                <com.bhive.beehiveapp.utils.fonts.CustomTvRegular
                                    android:layout_width="match_parent"
                                    android:textColor="@color/black"
                                    android:layout_height="wrap_content"
                                    android:text="+123 456 789 321" />

                                <com.bhive.beehiveapp.utils.fonts.CustomTvLight
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Phone"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height=".5dp"
                            android:layout_marginVertical="12dp"
                            android:background="@color/black" />

                        <LinearLayout
                            android:id="@+id/emailLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginHorizontal="@dimen/_5dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/mailIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_baseline_email_24"
                                app:tint="@color/colorPrimary" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_20dp"
                                android:orientation="vertical">

                                <com.bhive.beehiveapp.utils.fonts.CustomTvRegular
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:text="after.hours@mail.com" />

                                <com.bhive.beehiveapp.utils.fonts.CustomTvLight
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Email"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height=".5dp"
                            android:layout_marginVertical="12dp"
                            android:background="@color/textHeadingColor" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</layout>