<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_4dp"
        android:layout_gravity="end"
        android:gravity="end"
        android:layout_marginHorizontal="@dimen/_8dp">



    <com.bhive.beehiveapp.utils.fonts.CustomTvRegular
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="@dimen/_2dp"
        android:layout_marginEnd="45dp"
        android:text="USER name"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_13sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userName">

        <com.bhive.beehiveapp.utils.fonts.CustomTvSemiBold
            android:id="@+id/senderImage"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/black_srtroke"
            android:gravity="center"
            android:text="U"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_18sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_8dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="45dp"
            android:layout_marginVertical="5dp"
            android:paddingVertical="@dimen/_5dp">

            <LinearLayout
                android:id="@+id/messageLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/right_bubble"
                android:orientation="vertical">

                <com.bhive.beehiveapp.utils.fonts.CustomTvRegular
                    android:id="@+id/messageBubble"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/_2dp"
                    android:gravity="end"
                    android:paddingHorizontal="@dimen/_30dp"
                    android:paddingVertical="@dimen/_8dp"
                    android:text="user message"
                    android:textSize="@dimen/_12sp"
                    android:textColor="@color/white" />

                <com.bhive.beehiveapp.utils.fonts.CustomTvRegular
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/messageBubble"
                    android:layout_gravity="end"
                    android:layout_marginHorizontal="@dimen/_10dp"
                    android:gravity="end"
                    android:text="time"
                    android:textSize="@dimen/_11sp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/DarkGray" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_4dp"
        android:layout_gravity="start"
        android:gravity="start"
        android:layout_marginHorizontal="@dimen/_8dp">



        <RelativeLayout
            android:layout_width="wrap_content"
            android:elevation="@dimen/_4dp"
            android:layout_gravity="start"
            android:gravity="start"
            android:layout_marginHorizontal="@dimen/_8dp"
            android:layout_height="wrap_content">

            <com.bhive.beehiveapp.utils.fonts.CustomTvSemiBold
                android:id="@+id/senderImageL"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_below="@id/userNameL"
                android:layout_centerVertical="true"
                android:background="@drawable/black_srtroke"
                android:gravity="center"
                android:text="M"
                android:layout_marginTop="@dimen/_10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_18sp" />

            <com.bhive.beehiveapp.utils.fonts.CustomTvRegular
                android:id="@+id/userNameL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_2dp"
                android:layout_marginStart="42dp"
                android:gravity="start"
                android:text="manager name"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_13sp" />

            <RelativeLayout
                android:id="@+id/messageLayoutL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:background="@drawable/left_bubble"
                android:layout_below="@id/userNameL"
                android:layout_marginVertical="@dimen/_5dp"
                android:layout_centerVertical="true"
                android:paddingVertical="@dimen/_5dp"
                android:elevation="@dimen/_3dp">


                <com.bhive.beehiveapp.utils.fonts.CustomTvRegular
                    android:id="@+id/messageBubbleL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/_2dp"
                    android:gravity="center"
                    android:padding="@dimen/_10dp"
                    android:textSize="@dimen/_12sp"
                    android:text="user message"
                    android:textColor="@color/black" />

                <com.bhive.beehiveapp.utils.fonts.CustomTvRegular
                    android:id="@+id/timeL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/messageBubbleL"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="1dp"
                    android:text=""
                    android:layout_marginEnd="8dp"
                    android:textSize="@dimen/_11sp" />
            </RelativeLayout>


        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>