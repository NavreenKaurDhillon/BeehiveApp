<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:elevation="@dimen/_4dp"
    android:layout_gravity="start"
    android:gravity="start"
    android:layout_marginHorizontal="@dimen/_8dp"
    android:layout_height="wrap_content">

    <com.bhive.beehiveapp.utils.fonts.CustomTvSemiBold
        android:id="@+id/senderImage"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_below="@id/senderName"
        android:layout_centerVertical="true"
        android:background="@drawable/black_srtroke"
        android:gravity="center"
        android:text="M"
        android:layout_marginTop="@dimen/_10dp"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_18sp" />

    <com.bhive.beehiveapp.utils.fonts.CustomTvRegular
        android:id="@+id/senderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_2dp"
        android:layout_marginStart="42dp"
        android:gravity="start"
        android:text="manager name"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_13sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:background="@drawable/left_bubble"
        android:layout_below="@id/senderName"
        android:layout_marginVertical="@dimen/_5dp"
        android:layout_centerVertical="true"
        android:paddingVertical="@dimen/_5dp"
        android:elevation="@dimen/_3dp">


        <com.bhive.beehiveapp.utils.fonts.CustomTvRegular
            android:id="@+id/messageBubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_2dp"
            android:gravity="center"
            android:padding="@dimen/_10dp"
            android:textSize="@dimen/_12sp"
            android:text="user message"
            android:textColor="@color/black" />

        <com.bhive.beehiveapp.utils.fonts.CustomTvRegular
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/messageBubble"
            android:layout_marginStart="12dp"
            android:layout_marginTop="1dp"
            android:text="time"
            android:layout_marginEnd="8dp"
            android:textSize="@dimen/_11sp" />
    </RelativeLayout>


</RelativeLayout>