<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/mainCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15dp"
        android:layout_marginVertical="3dp"
        android:elevation="@dimen/_10dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.bhive.beehiveapp.utils.fonts.CustomTvSemiBold
                android:id="@+id/facilitiesCount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:text="1"
                android:layout_margin="0.5dp"
                android:elevation="3dp"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_20dp"
                android:textColor="@color/white"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical">
                <com.bhive.beehiveapp.utils.fonts.CustomTvSemiBold
                    android:id="@+id/facilityHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="heading"
                    android:textSize="@dimen/_13sp"
                    android:textColor="@color/black"/>

                <com.bhive.beehiveapp.utils.fonts.CustomTvMedium
                    android:id="@+id/facilityDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="description"
                    android:layout_below="@id/facilityHeading"
                    android:layout_marginTop="2dp"
                    android:textSize="@dimen/_12sp"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginVertical="10dp"
                    android:layout_below="@id/facilityDescription"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.bhive.beehiveapp.utils.fonts.CustomTvSemiBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Opening time"
                            android:elevation="4dp"
                            android:textSize="@dimen/_11sp"
                            />
                        <com.bhive.beehiveapp.utils.fonts.CustomTvSemiBold
                            android:layout_width="wrap_content"
                            android:id="@+id/openingTime"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sp"
                            android:text="10:00 AM"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.bhive.beehiveapp.utils.fonts.CustomTvSemiBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_11sp"
                            android:elevation="4dp"
                            android:text="Closing time"/>
                        <com.bhive.beehiveapp.utils.fonts.CustomTvSemiBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:id="@+id/closingTime"
                            android:textSize="@dimen/_12sp"
                            android:text="8:00 PM"/>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginVertical="@dimen/_12dp"
        android:layout_below="@id/mainCardView"
        android:layout_marginHorizontal="@dimen/_10dp"
        android:background="@color/LightSlateGray"/>

</RelativeLayout>