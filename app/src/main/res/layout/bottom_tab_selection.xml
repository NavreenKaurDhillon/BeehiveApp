<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/_30dp"
    android:background="@color/white"
    android:paddingHorizontal="@dimen/_5dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/closeIV"
        android:layout_width="@dimen/_25dp"
        android:layout_height="@dimen/_25dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/_8dp"
        android:layout_marginTop="@dimen/_8dp"
        android:layout_marginEnd="@dimen/_8dp"
        android:layout_marginBottom="@dimen/_8dp"
        android:src="@drawable/ic_close"
        app:tint="@color/black" />

    <LinearLayout
        android:layout_below="@id/closeIV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8dp"
        android:orientation="horizontal"
        android:weightSum="2">

    <LinearLayout
        android:id="@+id/uploadFromGallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:backgroundTint="@color/white"
        android:elevation="@dimen/_5dp"
        android:layout_marginEnd="@dimen/_6dp"
        android:paddingHorizontal="@dimen/_10dp"
        android:paddingVertical="@dimen/_15dp"
        android:background="@drawable/gray_border"
        android:layout_weight="1"
        >

        <ImageView
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:src="@drawable/icons8_gallery_50"
            android:layout_gravity="center"
            app:tint="@color/colorPrimary" />
        <com.bhive.beehiveapp.utils.fonts.CustomTvSemiBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dp"
            android:textSize="@dimen/_12sp"
            android:text="Upload from Gallery"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/takePhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:elevation="@dimen/_5dp"
        android:backgroundTint="@color/white"
        android:layout_marginStart="@dimen/_6dp"
        android:background="@drawable/gray_border"
        android:paddingHorizontal="@dimen/_10dp"
        android:paddingVertical="@dimen/_15dp"
        android:layout_weight="1"
        >

        <ImageView
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:src="@drawable/icons8_camera_50"
            android:layout_gravity="center"
            app:tint="@color/colorPrimary" />
        <com.bhive.beehiveapp.utils.fonts.CustomTvSemiBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take Photo"
            android:textSize="@dimen/_12sp"
            android:layout_marginTop="@dimen/_5dp"
            android:textColor="@color/black"/>

    </LinearLayout>
    </LinearLayout>

</RelativeLayout>